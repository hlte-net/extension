{
  "manifest_version": 2,
  "name": "hlte.net",
  "version": "0.2.2",
  "description": "hlte.net browser extension",
  "author": "Electric Sheep Co.",
  "homepage_url": "https://hlte.net",
  "developer": {
    "name": "Electric Sheep Co.",
    "url": "https://hlte.net"
  },
  "icons": {
    "16": "icons/icons8-crayon-16-blueedit.png",
    "32": "icons/icons8-crayon-64-blueedit.png",
    "48": "icons/icons8-crayon-64-blueedit.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["shared.js", "hlte.js"]
    }
  ],
  "background": {
    "scripts": ["shared.js", "bg.js"],
    "persistent": true
  },
  "permissions": [
    "*://*/*",
    "webRequest",
    "storage",
    "tabs",
    "contextMenus",
    "activeTab"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "chrome_style": true,
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "hello@hlte.net",
      "strict_min_version": "48.0",
      "update_url": "https://updates.hlte.net/main.json"
    }
  },
  "browser_action": {
    "default_icon": {
      "32": "icons/icons8-crayon-64-blueedit.png"
    },
    "default_popup": "popup.html",
    "browser_style": true
  },
  "web_accessible_resources": [
    "icons/*.png",
    "style.css",
    "*.js"
  ]
}